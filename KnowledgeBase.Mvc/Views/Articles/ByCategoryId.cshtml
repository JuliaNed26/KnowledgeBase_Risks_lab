@model IEnumerable<BLL.Models.ArticleData>

@{
    ViewData["Title"] = $"Articles for {ViewData["CategoryName"]}";
}

<div class="container bg-light text-dark mt-5 p-4 rounded shadow-lg">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
    </div>

    @if (Model != null && Model.Any())
    {
        @foreach (var article in Model)
        {
            <div class="card h-100 mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id" class="fs-6 text-black">
                            @article.Title
                        </a>
                    </h5>
                </div>
            </div>
        }
    }
    else
    {
        <p>No articles found for this category.</p>
    }

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-warning">Add New Article</a>
        <a asp-action="Index" asp-controller="Categories" class="btn btn-secondary">Back to Categories</a>
    </div>
</div>