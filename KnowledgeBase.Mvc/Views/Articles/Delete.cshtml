@model BLL.Models.ArticleData

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Are you sure you want to delete this article?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
    </dl>

    <form asp-controller="Articles" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id"/>
        <button type="submit" class="btn btn-warning mt-2">Delete</button>
        <a asp-action="ByCategoryId" asp-route-categoryId="@Model.CategoryId" class="btn btn-secondary mt-2">Cancel</a>
    </form>
</div>