@model IEnumerable<BLL.Models.CategoryData>

<div class="container bg-light text-dark mt-5 p-4 rounded shadow-lg">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Categories</h1>
        <a asp-action="Create" class="btn btn-warning">Create New Category</a>
    </div>

    @foreach (var item in Model)
    {
        <div class="card h-100 mb-3">
            <div class="card-body">
                <h5 class="card-title">
                    <a asp-controller="Articles" asp-action="ByCategoryId" asp-route-categoryId="@item.Id" class="text-dark">
                        @item.Name
                    </a>
                </h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Delete</a>
            </div>
        </div>
    }
</div>